{
    "files": [
        "Src/main.ts"
    ],
    "include": [
        "../Shared/**/*"
    ],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "build",
        "strict": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "lib": [
            "esnext"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "Src/*"
            ],
            "@Shared/*": [
                "../Shared/*"
            ]
        }
    },
}